---
import MobileMenuToggle from 'virtual:starlight/components/MobileMenuToggle';
import Search from 'virtual:starlight/components/Search';

import { Navbar } from '@/components/Navbar';

const { hasSidebar } = Astro.locals.starlightRoute;
---

<div class="page sl-flex">
  <Navbar
    mode="docs"
    client:load
    transition:persist
  />
  <Search />
  {
    hasSidebar && (
      <nav
        class="sidebar print:hidden"
        aria-label={Astro.locals.t('sidebarNav.accessibleLabel')}
      >
        <MobileMenuToggle />
        <div
          id="starlight__sidebar"
          class="sidebar-pane"
        >
          <div class="sidebar-content sl-flex">
            <slot name="sidebar" />
          </div>
        </div>
      </nav>
    )
  }
  <div class="main-frame"><slot /></div>
</div>

<style>
  @layer starlight.core {
    .page {
      flex-direction: column;
      min-height: 100vh;
    }

    .sidebar-pane {
      visibility: var(--sl-sidebar-visibility, hidden);
      position: fixed;
      z-index: var(--sl-z-index-menu);
      inset-block: var(--sl-nav-height) 0;
      inset-inline-start: 0;
      width: 100%;
      background-color: var(--sl-color-black);
      overflow-y: auto;
    }

    :global([aria-expanded='true']) ~ .sidebar-pane {
      --sl-sidebar-visibility: visible;

      /* customization: make mobile nav menu use page-level scrolling. this is part of a solution to prevent double scrollbars and navbar layout shift on menu show/hide. */
      position: static;
      overflow-y: visible;
      /* accommodate navbar */
      padding-top: 6.25rem;
    }

    @media (min-width: 50rem) {
      .sidebar-pane {
        --sl-sidebar-visibility: visible;
        width: var(--sl-sidebar-width);
        background-color: var(--sl-color-bg-sidebar);
        border-inline-end: 1px solid var(--sl-color-hairline-shade);
        padding-bottom: 2rem;

        /* enforce fixed/scrolled nav pane at large size (in case mobile nav menu is expanded) */
        position: fixed !important;
        overflow-y: auto !important;
        padding-top: 0 !important;
      }
    }

    .sidebar-content {
      height: 100%;
      min-height: max-content;
      padding: 1rem var(--sl-sidebar-pad-x) 0;
      flex-direction: column;
      gap: 1rem;
    }

    @media (min-width: 50rem) {
      .sidebar-content::after {
        content: '';
        padding-bottom: 1px;
      }
    }

    .main-frame {
      padding-top: calc(var(--sl-nav-height) + var(--sl-mobile-toc-height));
      padding-inline-start: var(--sl-content-inline-start);
    }

    /* customization: hide content when mobile nav menu is open. this is part of a solution to prevent double scrollbars. */
    /* may also be able to use `:global([data-mobile-menu-expanded]) .main-frame` */
    :global(nav:has([aria-expanded='true'])) ~ .main-frame {
      display: none;
    }

    @media (min-width: 50rem) {
      .main-frame {
        /* enforce content visible at large size (in case mobile nav menu is expanded) */
        display: block !important;
      }
    }

    /* customization: prevent navbar layout shift when toggling mobile nav menu */
    :global(html) {
      scrollbar-gutter: stable;
    }

    @media (min-width: 50rem) {
      :global(html) {
        scrollbar-gutter: initial;
      }
    }
  }
</style>
